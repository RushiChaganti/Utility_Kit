{
  "manifest_version": 3,
  "name": "Close & Forget Tab",
  "version": "0.3.0",
  "description": "Close the active tab and remove it from Recently Closed and history.",
  "permissions": ["tabs", "history", "browsingData", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
        "default_popup": "popup.html",
    "default_title": "Close Tab Without Trace"
  },
  "commands": {
    "close_and_forget": {
      "description": "Close current tab and forget it",
      "suggested_key": { "default": "Alt+Shift+W" }
    }
  }
}
