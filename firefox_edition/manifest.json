{
  "manifest_version": 2,
  "name": "Close & Forget Tab (Firefox)",
  "version": "0.4.0",
  "description": "Close the active tab and remove it from Recently Closed and history in Firefox.",
  "permissions": [
    "tabs",
    "history",
    "sessions",
    "browsingData",
    "menus",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Close Tab Without Trace",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png"
    }
  },
  "commands": {
    "close_and_forget": {
      "description": "Close current tab and forget it",
      "suggested_key": { "default": "Alt+Shift+W" }
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "close-and-forget@example.com"
    }
  }
}
